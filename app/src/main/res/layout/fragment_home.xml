<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".ui.home.HomeFragment">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/prayer_blue_primary"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        android:layoutDirection="rtl"
        app:title="@string/title_prayer_times_palestine"
        app:titleCentered="true"
        app:titleTextColor="@color/white"
        app:navigationIcon="@android:drawable/ic_menu_sort_by_size"
        app:menu="@menu/menu_home_appbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header section with blue patterned background -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:layoutDirection="rtl"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Moon placeholder on the left -->
        <View
            android:id="@+id/moonView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/moon_circle_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Dates and weekday on the right -->
        <LinearLayout
            android:id="@+id/dateContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintStart_toEndOf="@id/moonView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/hijriDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hijri_date_sample"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/weekdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/weekday_sample"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gregorianDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/gregorian_date_sample"
                android:textColor="@color/header_subtitle"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Countdown to Asr -->
        <TextView
            android:id="@+id/countdownText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/countdown_asr_sample"
            android:textColor="@color/prayer_green"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/dateContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Time since Dhuhr -->
        <TextView
            android:id="@+id/sinceDhuhrText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/elapsed_dhuhr_sample"
            android:textColor="@color/header_subtitle"
            android:textSize="14sp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/countdownText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Location at the bottom -->
        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/location_sample"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Prayer list label as subtle divider (optional) -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/list_divider"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Prayer Times List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/prayerRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_prayer" />

</androidx.constraintlayout.widget.ConstraintLayout>
